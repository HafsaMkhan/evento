@model WebApplication4.Models.PackagesViewModel

@{
    ViewBag.Title = "AddPackages";
    Layout = "~/Views/Shared/CompanyNavbar.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="fullscreen-centered " style="background-image: url(1.jpg)">
        <div id="background-wrapper" class="benches" data-stellar-background-ratio="0.8">
            <div id="content">

                <div class="row">
                    <div class="col-sm-6 col-sm-offset-3">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title" style="font-weight: bold; font-size: 30px; color:azure">
                                    Add Packages
                                </h3>
                            </div>
                            <div class="panel-body">
                                <form accept-charset="UTF-8" role="form">
                                    <fieldset>
                                        <div class="form-group">
                                            <div class="input-group input-group-lg">
                                                <span class="input-group-addon glyphicon glyphicon-pencil"></span>
                                                <input type="text" class="form-control" placeholder="Packages Name">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="input-group input-group-lg">
                                                <span class="input-group-addon glyphicon glyphicon-credit-card"></span>
                                                <input type="number" class="form-control" placeholder="Price">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="input-group input-group-lg">
                                                <span class="input-group-addon glyphicon glyphicon-edit"></span>
                                                <textarea type="textarea" class="form-control" placeholder="Description" rows="5"></textarea>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <input type="file" name="pic" id="pic" style="background-color:#504f4d; color:white; ">
                                        </div>
                                        <div class="form-group">
                                            <div class="dropdown">
                                                <button class="btn btn-lg  " type="button" data-toggle="dropdown" style="background-color:#504f4d; color:white">
                                                    Catagory
                                                    <span class="caret"></span>
                                                </button>
                                                <ul class="dropdown-menu" style="background-color:#504f4d; color:white">
                                                    <li>Wedding</li>
                                                    <li>Tour</li>
                                                    <li>Party/li>
                                                </ul>
                                            </div>
                                        </div>

                                        <input class="btn btn-lg  btn-block" type="submit" value="Sumbit" style="background-color:#504f4d; color:white">
                                    </fieldset>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
